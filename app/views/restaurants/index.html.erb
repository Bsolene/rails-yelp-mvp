

<div class="container">

  <h1 class="text-center">All the Restaurants</h1>


  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="product">
        <%= image_tag('https://unsplash.it/200/100/?random', class: 'product-image hidden-xs') %>
        <div class='product-body'>
          <h3><%= restaurant.name %></h3>
          <p><%= restaurant.category %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
